        .map#map-guangzhou
    .ch.event-preview.event-beijing
      .container
        .main-content
          .event-title-box
            h1.position 北京
            .event-title 魅知幻想博览会<img class="cross" src="./image/cross.svg">北京IDO JOY 2020
            .event-subtitle 2020.10.2 - 4 · 国家会议中心
          .sub-event 魅知幻想歌谣会5G版2020（北京场）<br>幻奏华章 2020天津场
          .links 
            a.item(href="http://www.idoacg.com/", target="_blank")
              i.icon.icon-link
              span 活动网站
            a.item(href="https://j.map.baidu.com/f2/cq", target="_blank")
              i.icon.icon-position
              span 地图导航
        .map#map-beijing

    script(type="text/javascript" src="//api.map.baidu.com/api?v=2.0&ak=64665E5BCEdfb17ec826f5f890f07c57")
    script.
      function initMap(element, pointlat, pointlng){
        var map = new BMap.Map(element);
        var point = new BMap.Point(pointlat, pointlng);
        map.centerAndZoom(point, 15);
        var marker = new BMap.Marker(point);
        map.addOverlay(marker)
      }
      window.onload = function(){
        initMap('map-shanghai',121.3084,31.196105)
        initMap('map-guangzhou',113.371768,23.103685)
        initMap('map-beijing',116.396466,40.006295)
      }